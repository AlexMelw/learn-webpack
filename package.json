{
  "name": "learn-webpack",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "up-major": "git restore --staged . && npm version major --message \"UpRev %s\" --force",
    "up-minor": "git restore --staged . && npm version minor --message \"UpRev %s\" --force",
    "up-patch": "git restore --staged . && npm version patch --message \"UpRev %s\" --force",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --config webpack.dev.config.js",
    "build-dev": "cross-env NODE_ENV=development webpack --config webpack.dev.config.js",
    "build-prod": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js",
    "build-analyze": "cross-env ANALYZE_BUNDLE=true npm run build-prod",
    "build-public": "cross-env NODE_ENV=development webpack --config webpack.public.config.js --mode production",
    "build-admin": "cross-env NODE_ENV=development webpack --config webpack.admin.config.js --mode production",
    "build-frontend": "cross-env NODE_ENV=development webpack --config webpack.frontend.config.js --mode production",
    "build-server": "cross-env NODE_ENV=development webpack --config webpack.server.config.js --mode production",
    "build-admin-n-public": "cross-env-shell NODE_ENV=production \"npm run build-public && npm run build-admin\"",
    "build-frontend-n-server": "cross-env-shell NODE_ENV=production \"npm run build-frontend && npm run build-server\"",
    "build-experimental-frontend-only": "cross-env NODE_ENV=development webpack --config webpack.config.js --mode development --config-name frontend-config",
    "build-experimental-server-only": "cross-env NODE_ENV=development webpack --config webpack.config.js --mode development --config-name server-config",
    "build-experimental-both-A": "cross-env NODE_ENV=development webpack --config webpack.config.js --mode development",
    "build-experimental-both-B": "cross-env-shell NODE_ENV=production \"npm run build-experimental-frontend-only && npm run build-experimental-server-only\"",
    "build-all": "cross-env-shell NODE_ENV=production \"npm run build-frontend-n-server && npm run build-admin-n-public\"",
    "cli": "node ./dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.4",
    "html-webpack-plugin": "^5.5.1",
    "lodash-webpack-plugin": "^0.11.6",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.1",
    "react-refresh": "^0.14.0",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.80.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.9.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
